<% lb = data.left_banner %>

<div class="leftBar">
    <img src="<%= lb.photo_url %>" alt="<%= lb.Name %> photo"
     class="professor-photo" width="260" height="260">

    <h2 class="name" style="margin: 0 0 8px 0;">
      <a href="<%= (data.top_banner&.nav&.first&.url || '/index.html') %>" class="name-link">
        <%= lb.Name %>
      </a>
    </h2>

    <div class="basic-info">
      <% occ = lb.Ocupation || lb.Occupation %>
      <% if occ %><div class="bi-line"><%= occ %></div><% end %>
      <% if lb.School %><div class="bi-line"><%= lb.School %></div><% end %>
      <% if lb.Major %><div class="bi-line"><%= lb.Major %></div><% end %>
      <% if lb.Degree %><div class="bi-line"><%= lb.Degree %></div><% end %>
      <% if lb.Graduation_Year %><div class="bi-line">Graduation: <%= lb.Graduation_Year %></div><% end %>
    </div>

    <ul class="unbulleted">
      <% if lb.Phone %>
        <% tel = lb.Phone.gsub(/\D/, '') %>
        <li>📞 <span class="item-label">Phone：</span><a href="tel:+<%= tel %>"><%= lb.Phone %></a></li>
      <% end %>

      <% if lb.Email %>
        <li>✉️ <span class="item-label">Email：</span><a class="item-text"><%= lb.Email %></a></li>
      <% end %>

      <% if lb.Mailing_Address %>
        <li>📍 <span class="item-label">Address：</span><span class="item-text"><%= lb.Mailing_Address %></span></li>
      <% end %>

      <% if lb.Github_URL %>
        <li>💻 <span class="item-label">Github：</span><a class="pub-link" href="<%= lb.Github_URL %>" target="_blank" rel="noopener">GitHub</a></li>
      <% end %>

      <% if lb.Work_authorization %>
        <li>🛂 <span class="item-label">Work Authorization：</span><span class="item-text"><%= lb.Work_authorization %></span></li>
      <% end %>

      <% if lb.nationality %>
        <li>🇨🇳 <span class="item-label">Nationality：</span><span class="item-text"><%= lb.nationality %></span></li>
      <% end %>
    </ul>
</div>
