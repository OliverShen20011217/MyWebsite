<% lb = data.left_banner %>
<% occ = (lb.Ocupation || lb.Occupation).to_s %>
<% linkedin = (lb['LinkedIn_URL'] || lb['linkedin_URL']).to_s %>

<div class="leftBar">
  <img src="<%= lb.photo_url.to_s %>" alt="<%= lb.Name.to_s %> photo"
       class="professor-photo" width="260" height="260">

  <h2 class="name" style="margin: 0 0 8px 0;">
    <a class="pub-link" href="<%= (data.top_banner&.nav&.first&.url || '/index.html') %>" class="name-link">
      <%= lb.Name.to_s %>
    </a>
  </h2>

  <div class="basic-info">
    <div class="bi-line"><%= occ %></div>
    <div class="bi-line"><%= lb.School.to_s %></div>
    <div class="bi-line"><%= lb.Major.to_s %></div>
    <div class="bi-line"><%= lb.Degree.to_s %></div>
    <div class="bi-line">Graduation: <%= lb.Graduation_Year.to_s %></div>
  </div>

  <ul class="unbulleted">
    <li>📞 <span class="item-label">Phone：</span>
      <a class="pub-link" href="tel:+<%= lb.Phone.to_s.gsub(/\D/, '') %>"><%= lb.Phone.to_s %></a>
    </li>

    <li>✉️ <span class="item-label">Email：</span>
      <a class="pub-link" href="mailto:<%= lb.Email.to_s %>"><%= lb.Email.to_s %></a>
    </li>

    <li>📍 <span class="item-label">Address：</span>
      <span class="item-text"><%= lb.Mailing_Address.to_s %></span>
    </li>

    <li>
      💻 <span class="item-label">Links：</span>
      <a class="pub-link" href="<%= lb['Github_URL'].to_s %>" target="_blank" rel="noopener" style="color:#016efc;">GitHub</a>
      <span> </span> 
      <a class="item-text">,</a>
      <span> </span>
      <a class="pub-link" href="<%= linkedin %>" target="_blank" rel="noopener" style="color:#016efc;">LinkedIn</a>
    </li>

    <li>🛂 <span class="item-label">Work Authorization：</span>
      <span class="item-text"><%= lb.Work_authorization.to_s %></span>
    </li>

    <li>🇨🇳 <span class="item-label">Nationality：</span>
      <span class="item-text"><%= lb.nationality.to_s %></span>
    </li>

    <li>📅
    <a class="pub-link" href="<%= lb['register'].to_s %> " target="_blank" rel="noopener" style="color:#016efc;">Register an Online Meeting with me</a>
    ⬅️
    </li>
  </ul>
</div>
