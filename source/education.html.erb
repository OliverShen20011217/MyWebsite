---
layout: layout
title: "Education"
---

<!-- Â§çÁî® Work Experience ÁöÑÊ†∑Âºè -->
<link rel="stylesheet" href="/stylesheets/work_experience.css">

<main class="we-container">
  <h1>Education</h1>

  <% raw_list = (data['education'] || []) %>
  <% groups = raw_list.group_by { |e| e['Title'].to_s.strip } %>

  <% order = ['University', 'High school', 'Middle School', 'Junior High School'] %>
  <% ordered_keys = order + (groups.keys - order) %>

  <% ordered_keys.each do |title| %>
    <% list = groups[title] %>
    <% next if !list || list.empty? %>

    <section class="we-section" id="<%= title.downcase.gsub(/\s+/, '-').gsub(/[^\w-]/, '') %>">
      <h2 class="we-section-title"><%= title %></h2>

      <% list.each_with_index do |ed, i| %>
        <% school   = ed['school_name'].to_s.strip %>
        <% located  = ed['located'].to_s.strip %>
        <% time     = ed['time'].to_s.strip %>
        <% majorpos = ed['major'].to_s.strip.presence || [ed['Degree'], ed['Major']].compact.join(' ‚Ä¢ ') %>

        <article class="we-card" id="<%= "#{title.downcase.gsub(/\s+/, '-').gsub(/[^\w-]/, '')}-#{i}" %>">
          <header class="we-head">
            <% if school != '' %>
              <h3 class="we-company"><%= school %></h3>
            <% end %>

            <% if located != '' %>
              <div class="we-loc">üìç <%= located %></div>
            <% end %>

            <% if majorpos.to_s.strip != '' %>
              <div class="we-pos"><%= majorpos %></div>
            <% end %>

            <% if time != '' %>
              <div class="we-time">üìÖ <%= time %></div>
            <% end %>
          </header>

          <% details = [] %>
          <% details << "Specialization: #{ed['Specialization']}" if ed['Specialization'].to_s.strip != '' %>
          <% details << "GPA: #{ed['GPA']}"                     if ed['GPA'].to_s.strip != '' %>
          <% details << "Notes: #{ed['notes']}"                 if ed['notes'].to_s.strip != '' %>

          <% if details.any? %>
            <ul class="we-desc">
              <% details.each do |d| %>
                <li><%= d %></li>
              <% end %>
            </ul>
          <% end %>
        </article>
      <% end %>
    </section>
  <% end %>
</main>
