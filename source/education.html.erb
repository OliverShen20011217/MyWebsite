---
layout: layout
title: "Education"
---

<link rel="stylesheet" href="/stylesheets/education.css">

<main class="education-container">
  <h1>Education</h1>

  <% raw_list = (data['education'] || []) %>
  <% groups = raw_list.group_by { |e| e['Title'].to_s.strip } %>

  <% order = ['University', 'High school', 'Junior High School'] %>
  <% ordered_keys = order + (groups.keys - order) %>

  <% ordered_keys.each do |title| %>
    <% list = groups[title] %>
    <% next if !list || list.empty? %>

    <section class="edu-section" id="<%= title.downcase.gsub(/\s+/,'-') %>">
      <h2 class="edu-section-title"><%= title %></h2>

      <% list.each_with_index do |ed, i| %>
        <article class="edu-card" id="<%= "#{title.downcase.gsub(/\s+/,'-')}-#{i}" %>">
          <header class="edu-head">
            <% if ed['school_name'].to_s.strip != '' %>
              <h3 class="edu-school"><%= ed['school_name'] %></h3>
            <% end %>
            <div class="edu-meta-top">
              <% if ed['time'].to_s.strip != '' %>
                <div class="edu-time">üìÖ <%= ed['time'] %></div>
              <% end %>
              <% if ed['located'].to_s.strip != '' %>
                <div class="edu-loc">üìç <%= ed['located'] %></div>
              <% end %>
            </div>
          </header>

          <ul class="edu-list">
            <% if ed['major'].to_s.strip != '' %>
              <li><span class="label">MajorÔºö</span><%= ed['major'] %></li>
            <% end %>
            <% if ed['Specialization'].to_s.strip != '' %>
              <li><span class="label">SpecializationÔºö</span><%= ed['Specialization'] %></li>
            <% end %>
            <% if ed['GPA'].to_s.strip != '' %>
              <li><span class="label">GPAÔºö</span><%= ed['GPA'] %></li>
            <% end %>
            <% if ed['notes'].to_s.strip != '' %>
              <li class="edu-notes"><span class="label">NotesÔºö</span><%= ed['notes'] %></li>
            <% end %>
          </ul>
        </article>
      <% end %>
    </section>
  <% end %>
</main>
